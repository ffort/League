<!DOCTYPE html>

<html>
    <head>
      <title>League Site</title>
      <%= stylesheet_link_tag('application') %>
    </head>


    <body>
        <div class="outer_border">
          <div class="inner_border">

            <div id="header">
              <h1>League Site Admin</h1>
            </div>

            <div id="main">
              <% if !flash[:notice].blank? %>
                  <div class="notice">
                    <%= flash[:notice] %>
                  </div>
              <% end %>
              <div id="content">
                <%= yield %>
              </div>
            </div>

            <div id="footer">
              <p id="copyright">&copy; League Of Legends! / Fernando Fort </p>
            </div>

          </div>
        </div>
   </body>

</html>
